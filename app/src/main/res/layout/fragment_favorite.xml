<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/logo_book"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/book" />

            <TextView
                android:id="@+id/txt_titleF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="72dp"
                android:text="Android Studio"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_authorF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_titleF"
                android:paddingLeft="72dp"
                android:text="Mc.Growth Hill - 2005" />
            <TextView
                android:id="@+id/txt_rateF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/txt_titleF"
                android:textColor="@color/colorAccent"
                android:text="4.5" />

            <ImageView
                android:id="@+id/favoriteF"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:background="#00ffffff"
                android:onClick="onToggleStar"
                android:src="@drawable/ic_favorite" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/favoriteF"
                android:background="#00ffffff"
                android:onClick="onClick"
                android:paddingTop="15dp"
                android:src="@drawable/ic_download" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
