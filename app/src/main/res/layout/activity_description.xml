<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tlb_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_description"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/book"/>
    <Button
        android:id="@+id/btn_view"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/img_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"/>
    <Button
        android:id="@+id/btn_download"
        android:layout_below="@id/btn_view"
        android:layout_toRightOf="@id/img_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"/>
    <TextView
        android:id="@+id/txt_description"
        android:layout_below="@id/img_description"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
</LinearLayout>